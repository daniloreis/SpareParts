<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SparePartsApp.Views.RecebimentoImpressao"
             xmlns:components="clr-namespace:SparePartsApp.Components" 
             Title="IMPRESSÃƒO ETIQUETAS">
    <ContentPage.Content>
        <StackLayout Padding="5">
            <ListView x:Name="LotesListView"  SeparatorColor="Black">
                <ListView.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Text="MATERIAL" />
                        <Label Grid.Row="0" Grid.Column="1" Text="DESTINO" HorizontalOptions="Center"/>
                        <Label Grid.Row="0" Grid.Column="2" Text="QTD" HorizontalOptions="Center"/>
                    </Grid> 
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell >
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" /> 
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="110" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  Text="{Binding Nome}"   VerticalOptions="StartAndExpand" />
                                <components:NumericEntry Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Text="{Binding QuantidadeImpressao, Mode=TwoWay}" x:Name="txtQuantidade" Keyboard="Numeric"
                                       HorizontalTextAlignment="Center" WidthRequest="50" TextChanged="txtQuantidade_TextChanged" />

                                <Label Grid.Row="1" Grid.Column="0" Text="{Binding NumeroLote}"  VerticalOptions="Start" HeightRequest="75" />
                                <Label Grid.Row="1" Grid.Column="1"  Grid.ColumnSpan="2" Text="{Binding DepositoEtiqueta}"   />                              
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView> 
            <Button x:Name="btnImprimir" Text="IMPRIMIR ETIQUETAS"   Clicked="btnImprimir_Clicked" VerticalOptions="End"/>
            <Button x:Name="btnFinalizar" Text="FINALIZAR"   Clicked="btnFinalizar_Clicked" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>