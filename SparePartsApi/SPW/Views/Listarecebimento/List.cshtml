@model SPW.Models.ListaRecebimentoViewModel

<h1>RECEBIMENTO</h1>


<hr />
<h3>Pesquisa:</h3>
@using (Html.BeginForm("Search", "Listarecebimento"))
{
<div class="form-inline">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-12">
            <label>Código lista: </label>
            @Html.Editor("Filtro.CodLista", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label>Código material: </label>
            @Html.Editor("Filtro.CodMaterial", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label>Material: </label>
            @Html.Editor("Filtro.Nome", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label>Operador: </label>
            @Html.Editor("Filtro.Usuario", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label>Tem Divergência?: </label>
            @Html.Editor("temDivergencia", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label>Data início: </label>
            @Html.Editor("Filtro.DataHoraInicio", new { htmlAttributes = new { @class = "form-control", @type = "date" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label>Data fim: </label>
            @Html.Editor("Filtro.DataHoraFim", new { htmlAttributes = new { @class = "form-control", @type = "date" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label>Documento SAP: </label>
            @Html.Editor("Filtro.NumeroDocumento", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4" style="vertical-align: bottom;">
            <input type="submit" value="Filtrar" class="btn btn-primary" />
        </div>
    </div>
</div>
}
<br />
<h3>Lista:</h3>
<br />
<table class="table">
    <tr>
        <th>
            Material
        </th>
        <th>
            Nome
        </th>
        <th>
            Lista
        </th>
        <th>
            Qtde.
        </th>
        <th>
            UM
        </th>
        <th>
            Entrada
        </th>
        <th>
            Destino
        </th>
        <th>
            Operador
        </th>
        <th>
            Início
        </th>
        <th>
            Fim
        </th>
        <th>
            Diverg.
        </th>
        <th>
            Lote
        </th>
        <th>
            Nº.OI
        </th>
        <th>
            Planejador
        </th>
        <th>
            Retorno SAP
        </th>
        <th>
            Foto
        </th>
    </tr>

    @foreach (var item in Model.Materiais.ToList())
    {
    <tr>
        <td>
            @Html.DisplayFor(model => item.CodMaterial)
        </td>

        <td>
            @Html.DisplayFor(model => item.Nome)
        </td>

        <td>
            @Html.DisplayFor(model => item.CodLista)
        </td>
        <td>
            @Html.DisplayFor(model => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(model => item.UnidadeMedida)
        </td>
        <td>
            @Html.DisplayFor(model => item.Deposito)
        </td>
        <td>
            @Html.DisplayFor(model => item.DepositoDestino)
        </td>
        <td>
            @Html.DisplayFor(model => item.Usuario)
        </td>
        <td>
            @Html.DisplayFor(model => item.DataHoraInicio)
        </td>
        <td>
            @Html.DisplayFor(model => item.DataHoraFim)
        </td>
        <td>
            @Html.DisplayFor(model => item.temDivergencia)
        </td>
        <td>
            @Html.DisplayFor(model => item.NumeroLote)
        </td>
        <td>
            @Html.DisplayFor(model => item.Ordem)
        </td>

        <td>
            @Html.DisplayFor(model => item.PlanejadorOrdem)
        </td>

        <td>
            @Html.DisplayFor(model => item.RetornoSap)
        </td>
        <td>
            @if (!string.IsNullOrWhiteSpace(item.Foto))
            {
                <a target="_blank" href="@Path.Combine("../../SparePartsApi/Uploads/", item.Foto)">
                    ver
                </a>
            }
        </td>
    </tr>
    }

</table>

